<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/b1"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/_1_point"
        app:layout_constraintBottom_toTopOf="@+id/b2"
        app:layout_constraintStart_toEndOf="@+id/ViewStick"
        app:layout_constraintTop_toBottomOf="@+id/countB" />

    <Button
        android:id="@+id/b2"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="30dp"
        android:text="@string/_2_point"
        app:layout_constraintBottom_toTopOf="@+id/b3"
        app:layout_constraintStart_toEndOf="@+id/ViewStick" />

    <Button
        android:id="@+id/b3"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:text="@string/_3_point"
        app:layout_constraintStart_toEndOf="@+id/ViewStick"
        app:layout_constraintTop_toBottomOf="@+id/b2" />

    <View
        android:id="@+id/ViewStick"
        android:layout_width="2dp"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/a2"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="30dp"
        android:text="@string/_2_point"
        app:layout_constraintBottom_toTopOf="@+id/a3"
        app:layout_constraintEnd_toStartOf="@+id/ViewStick" />

    <Button
        android:id="@+id/a1"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/_1_point"
        app:layout_constraintBottom_toTopOf="@+id/a2"
        app:layout_constraintEnd_toStartOf="@+id/ViewStick"
        app:layout_constraintTop_toBottomOf="@+id/countA" />

    <Button
        android:id="@+id/a3"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="48dp"
        android:text="@string/_3_point"
        app:layout_constraintEnd_toStartOf="@+id/ViewStick"
        app:layout_constraintTop_toBottomOf="@+id/a2" />

    <TextView
        android:id="@+id/countA"
        android:layout_width="104dp"
        android:layout_height="102dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:text="@string/_0"
        android:textColor="@color/black"
        android:textSize="70sp"
        app:layout_constraintEnd_toStartOf="@+id/ViewStick"
        app:layout_constraintTop_toBottomOf="@+id/TeamA" />

    <TextView
        android:id="@+id/countB"
        android:layout_width="103dp"
        android:layout_height="105dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/_0"
        android:textColor="@color/black"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/ViewStick"
        app:layout_constraintTop_toBottomOf="@+id/TeamB" />

    <TextView
        android:id="@+id/TeamB"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/team_b"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ViewStick"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TeamA"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="48dp"
        android:text="@string/team_a"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ViewStick"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewStick" />
</androidx.constraintlayout.widget.ConstraintLayout>